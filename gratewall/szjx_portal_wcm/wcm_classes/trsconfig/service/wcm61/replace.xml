<?xml version="1.0" encoding="GB2312"?>
<service provider="com.trs.ajaxservice.ReplaceContentServiceProvider">
	<method name="save">
	</method>
	<method name="findById"/>
	<method name="jFindById" truename="findById"  convertor="uri:/app/replace/replace_findbyid.jsp"/>
	<method name="query">
		<parameter name="ContainsRight" desc="是否附属权限信息" type="boolean" required="false" default="0"/>
		<!--排序字段及方式-->		
		<parameter name="OrderBy" desc="文档排序字段及方式" type="string" required="false"/>		
		<!--文档过滤器-->
		<parameter name="FilterType" desc="文档过滤器类型" type="int" required="false"/>
		<!-- 检索相关配置 BEGIN -->
		<parameter name="replacename" desc="查询的替换内容标题" type="string" required="false" search="true"
			search-operator="like"/>
		<parameter name="replacecontent" desc="查询的替换内容的内容" type="string" required="false" search="true"
			search-operator="like"/>
		<!-- 检索相关配置 END -->
		<parameter name="DateTimeFormat" desc="返回的日期格式" type="string" required="false" default="MM-dd HH:mm"/>			
	</method>
	<method name="jQuery" truename="query"  convertor="uri:/app/replace/replace_query.jsp"/>
</service>