<Templates imagesBasePath="fck_template/images/">
	<Template title="引用模板" image="quote.gif" wizard="basic">
		<Description>引用某人的言语或者引用某篇文章的节选内容。</Description>
		<Html>
			<![CDATA[
				<TABLE style="BORDER-COLLAPSE: collapse;border:1px solid gray" cellSpacing=4 cellPadding=2 width="100%" bgColor=#F5F5F5 border=0>
				<TBODY>
				<TR>
				<TD>
					以下是引用来自<STRONG>{#quotesrc}</STRONG> 的内容：</FONT>
				</TD>
				</TR>
				<TR>
				<TD>
					{#quote}
				</TD>
				</TR>
				</TBODY></TABLE>
			]]>
		</Html>
		<Params>
			<Param name="quotesrc" display="引用来源">
				<![CDATA[
					<input id="quotesrc" class="input_text" style="width:200px;" value="请在此输入引用来源...">
				]]>
			</Param>
			<Param name="quote" display="引用内容">
				<![CDATA[
					<textarea id="quote" class="textarea" style="width:200px;height:120px;">请在此输入引用内容</textarea>
				]]>
			</Param>
		</Params>
	</Template>
	<Template title="注释模板" image="zhushi.gif" wizard="basic">
		<Description>为某段内容进行额外的注释。</Description>
		<Html>
			<![CDATA[
				<TABLE style="BORDER-COLLAPSE: collapse;border:1px solid gray" cellSpacing=4 cellPadding=2 width="100%" bgColor=#F5F5F5 border=0>
				<TBODY>
				<TR>
				<TD>
					<STRONG>注释:</STRONG>
				</TD>
				</TR>
				<TR>
				<TD style="font-size:9pt;font-style:italic;">
					{#desc}
				</TD>
				</TR>
				</TBODY></TABLE>
			]]>
		</Html>
		<Params>
			<Param name="desc" display="注释">
				<![CDATA[
					<textarea id="desc" class="textarea" style="width:200px;height:120px;">请在此输入注释的内容</textarea>
				]]>
			</Param>
		</Params>
	</Template>
	<Template title="代码模板" image="code.gif" wizard="basic">
		<Description>一段代码，保留代码格式。</Description>
		<Html>
			<![CDATA[
				<TABLE style="BORDER-COLLAPSE: collapse;border:1px solid gray" cellSpacing=0 cellPadding=5 width="100%" bgColor=#cccccc border=0>
					<TBODY>
					<TR>
						<TD>{#code}</TD>
					</TR>
					</TBODY>
				</TABLE>
			]]>
		</Html>
		<Params>
			<Param name="code" display="代码" format="trans2Text">
				<![CDATA[
					<textarea id="code" class="textarea" style="width:200px;height:120px;">请在此输入代码</textarea>
				]]>
			</Param>
		</Params>
	</Template>
