<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE table SYSTEM "gwssi-database.dtd">
<table>
  <database>gwssi</database>
  <default-config>no</default-config>
  <sort-name>系统表</sort-name>
  <table-info name="funcinfo_new" class-name="com.gwssi.sysmgr.priv.func.dao.Funcinfo" check-flag="false">
    <description>系统功能表:树状结构</description>
  </table-info>

  <column name="funccode" data-type="varchar" length="36" not-null="true" empty-is-null="false" unique="false" value-from="input" description="功能代码"/>
  <column name="funcname" data-type="varchar" length="256" not-null="true" empty-is-null="false" unique="false" value-from="input" description="功能名称"/>
  <column name="parentcode" data-type="varchar" length="36" not-null="false" empty-is-null="false" unique="false" value-from="input" description="上级功能代码"/>
  <column name="groupname" data-type="varchar" length="32" not-null="false" empty-is-null="false" unique="false" value-from="input" description="功能组名称"/>
  <column name="status" data-type="char" length="1" not-null="false" empty-is-null="false" default="1" unique="false" value-from="input" description="状态"/>
  <column name="memo" data-type="varchar" length="256" not-null="false" empty-is-null="false" unique="false" value-from="input" description="备注信息"/>
  <column name="regname" data-type="varchar" length="24" not-null="false" empty-is-null="false" unique="false" value-from="generate" func-name="operName" description="录入人"/>
  <column name="regdate" data-type="char" length="8" not-null="false" empty-is-null="false" unique="false" value-from="generate" func-name="currentDate" description="录入时间"/>
  <column name="modname" data-type="varchar" length="24" not-null="false" empty-is-null="false" unique="false" value-from="generate" func-name="operName" description="修改人"/>
  <column name="moddate" data-type="char" length="8" not-null="false" empty-is-null="false" unique="false" value-from="generate" func-name="currentDate" description="修改时间"/>
  <primary-key name="funcinfo_pk" column-list="funccode"/>
  <foreign-key foreign-table="functxn_new" foreign-type="one-to-many" on-delete="cascade" on-update="none" column-names="funccode" foreign-names="funccode">
    <description>功能的交易列表</description>
  </foreign-key>

  <function func-name="select one funcinfo" func-type="select" column-list="funccode,funcname,parentcode,groupname,status,memo">
    <filter-column column-name="funccode" operator="eq" value-from="input" empty-flag="skip"/>
    <description>单记录查询</description>
  </function>

  <function func-name="select funcinfo list" func-type="rowset" column-list="funccode,funcname,parentcode,groupname,status,memo" max-record="0">
    <description>多记录查询</description>
  </function>

  <function func-name="insert one funcinfo" func-type="insert" column-list="funccode,funcname,parentcode,groupname,status,memo,regname,regdate">
    <description>插入记录</description>
  </function>

  <function func-name="delete one funcinfo" func-type="delete">
    <filter-column column-name="funccode" operator="eq" value-from="input" value-item="funccode" empty-flag="skip"/>
    <description>删除记录</description>
  </function>

  <function func-name="update one funcinfo" func-type="update" column-list="funcname,parentcode,groupname,status,memo,modname,moddate">
    <filter-column column-name="funccode" operator="eq" value-from="input" empty-flag="skip"/>
    <description>修改记录</description>
  </function>

  <function func-name="update funcinfo parentcode" func-type="update" column-list="parentcode">
    <filter-column column-name="funccode" operator="eq" value-from="input" empty-flag="skip"/>
    <description>修改功能的分类信息</description>
  </function>
</table>

