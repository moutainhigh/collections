	<bean class="com.gwssi.optimus.core.persistence.datasource.DataSourceManager">
		<property name="dataSourceRefs">
			<list>
				<bean class="com.gwssi.optimus.core.persistence.datasource.DataSourceRef">
					<property name="dataSourceKey" value="defaultDataSource" />
					<property name="dataSource" ref="defaultDataSource" />
					<property name="dbType" value="oracle" />
				</bean>
				<bean class="com.gwssi.optimus.core.persistence.datasource.DataSourceRef">
					<property name="dataSourceKey" value="approveDataSource" />
					<property name="dataSource" ref="approveDataSource" />
					<property name="dbType" value="oracle" />
				</bean>
				<bean class="com.gwssi.optimus.core.persistence.datasource.DataSourceRef">
					<property name="dataSourceKey" value="ruleConfigDataSource" />
					<property name="dataSource" ref="defaultDataSource" />
					<property name="dbType" value="oracle" />
				</bean>
				<bean class="com.gwssi.optimus.core.persistence.datasource.DataSourceRef">
					<property name="dataSourceKey" value="identityDataSource" />
					<property name="dataSource" ref="identityDataSource" />
					<property name="dbType" value="oracle" />
				</bean>
				<bean class="com.gwssi.optimus.core.persistence.datasource.DataSourceRef">
					<property name="dataSourceKey" value="emsConfigDataSource" />
					<property name="dataSource" ref="emsConfigDataSource" />
					<property name="dbType" value="oracle" />
				</bean>
			</list>
		</property>
		<property name="defaultDataSourceKey">
			<value>defaultDataSource</value>
		</property>
	</bean>
 
	<!--事务管理DataSourceTransactionManager -->
	<!-- 针对声明式的事物 -->
	
	<bean id="txManager"
		class="org.springframework.jdbc.datasource.DataSourceTransactionManager">
		<property name="dataSource" ref="defaultDataSource" />
	</bean>
	 
	
	<tx:annotation-driven transaction-manager="txManager" />

	<aop:config>
		<aop:pointcut id="baseServiceMethods"
			expression="execution(* com.gwssi..*.service..*.*(..))" />
		<aop:advisor advice-ref="txAdvice" pointcut-ref="baseServiceMethods" />
	</aop:config>

	<tx:advice id="txAdvice" transaction-manager="txManager">
		<tx:attributes>
			<tx:method name="select*" read-only="true" propagation="SUPPORTS" rollback-for="Throwable"/>
			<tx:method name="find*" read-only="true" propagation="SUPPORTS" rollback-for="Throwable"/>
			<tx:method name="query*" read-only="true" propagation="SUPPORTS" rollback-for="Throwable"/>
			<tx:method name="do*" propagation="REQUIRED" isolation="READ_COMMITTED" rollback-for="Throwable"/>
			<tx:method name="insert*" propagation="REQUIRED" isolation="READ_COMMITTED" rollback-for="Throwable"/>
			<tx:method name="save*" propagation="REQUIRED" isolation="READ_COMMITTED" rollback-for="Throwable"/>
			<tx:method name="update*" propagation="REQUIRED" isolation="READ_COMMITTED" rollback-for="Throwable"/>
			<tx:method name="add*" propagation="REQUIRED" isolation="READ_COMMITTED" rollback-for="Throwable"/>
			<tx:method name="delete*" propagation="REQUIRED" isolation="READ_COMMITTED" rollback-for="Throwable"/>
			<tx:method name="execute*" propagation="REQUIRED" isolation="READ_COMMITTED" rollback-for="Throwable"/>
			<tx:method name="createOrder*" propagation="REQUIRED" isolation="READ_COMMITTED" rollback-for="Throwable"/>
			<tx:method name="del*" propagation="REQUIRED" isolation="READ_COMMITTED" rollback-for="Throwable"/>
		</tx:attributes>
	</tx:advice>
	<bean name="sessionCacheClient" class="com.gwssi.optimus.core.web.session.client.redis.RedisSessionCacheClient" ></bean>
	<bean name="sessionManager" class="com.gwssi.optimus.core.web.session.manager.CatalinaSessionManager"></bean>
	<bean name="authManager" class="com.gwssi.optimus.plugin.auth.OptimusAuthManager"></bean> 
	
	
