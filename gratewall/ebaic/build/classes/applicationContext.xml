		 <property name="serviceInterface" value="com.gwssi.rodimus.sms.service.ISmsService" />
	</bean>
	 
	<!-- BJCA RPC -->
	<bean id="bjcaEngine" class="org.springframework.remoting.httpinvoker.HttpInvokerProxyFactoryBean">
		 <property name="serviceUrl" value="http://160.99.9.59:9090/bjgs_rpc/bjca.service" />
		 <property name="serviceInterface" value="com.gwssi.rodimus.bjca.BjcaEngine" />
	</bean>
	
	<!-- BJCA RPC -->
	<bean id="identityService" class="org.springframework.remoting.httpinvoker.HttpInvokerProxyFactoryBean">
		 <property name="serviceUrl" value="http://160.99.9.59:9090/bjgs_rpc/identity.service" />
		 <property name="serviceInterface" value="com.gwssi.rodimus.indentity.support.IdentityService" />
	</bean> 
	<bean id="IdentityCardUtil" class="com.gwssi.rodimus.indentity.IdentityCardUtil">
		<property name="identityService" ref="identityService"></property>
	</bean>
	
	
</beans>