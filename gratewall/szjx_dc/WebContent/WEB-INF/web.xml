	<display-name>sjzx_dc</display-name>
	
	<filter>
    <display-name>SsoAgentFilter</display-name>
    <filter-name>SsoAgentFilter</filter-name>
    <filter-class>com.gwssi.ssoagent.webFilter.SsoAgentFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>SsoAgentFilter</filter-name>
    <url-pattern>*.html</url-pattern>
  </filter-mapping>
  <filter-mapping>
    <filter-name>SsoAgentFilter</filter-name>
    <url-pattern>*.jsp</url-pattern>
  </filter-mapping>
  <filter-mapping>
    <filter-name>SsoAgentFilter</filter-name>
    <url-pattern>*.do</url-pattern>
  </filter-mapping>
  
	<welcome-file-list>
		<welcome-file>/page/home/index.jsp</welcome-file>
	</welcome-file-list>
	<session-config>
		<session-timeout>30</session-timeout>
	</session-config>
	
  <filter>
    <display-name>ReportAuthFilter</display-name>
    <filter-name>ReportAuthFilter</filter-name>
    <filter-class>com.gwssi.report.auth.ReportAuthFilter</filter-class>
  </filter>
  <filter-mapping>   
      <filter-name>ReportAuthFilter</filter-name>  
      <url-pattern>/page/report/*</url-pattern>  
  </filter-mapping>
  <filter-mapping>   
      <filter-name>ReportAuthFilter</filter-name>  
      <url-pattern>/cognosController/readCognos.do</url-pattern>  
  </filter-mapping>
  <filter-mapping>   
      <filter-name>ReportAuthFilter</filter-name>  
      <url-pattern>/cognosController/downReport.do</url-pattern>  
  </filter-mapping>
  <filter-mapping>   
      <filter-name>ReportAuthFilter</filter-name>  
      <url-pattern>/cognosController/saveReport.do</url-pattern>  
  </filter-mapping>
  <filter-mapping>   
      <filter-name>ReportAuthFilter</filter-name>  
      <url-pattern>/cognosController/queryReport.do</url-pattern>  
  </filter-mapping>

<filter>  
        <filter-name>specialCharactorTansferFilter</filter-name>  
        <filter-class>com.gwssi.report.auth.NonlicetFilter</filter-class>  
</filter>  
<filter-mapping>  
        <filter-name>specialCharactorTansferFilter</filter-name>  
        <url-pattern>/page/report/*</url-pattern>
</filter-mapping>  

